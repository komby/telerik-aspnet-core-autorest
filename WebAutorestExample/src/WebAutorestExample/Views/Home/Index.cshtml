<div class="row">
	<div class="col-xs-18 col-md-12">
		@(Html.Kendo().Grid<ExampleModels.Models.ExampleModel>()
				.Name("grid")
				.Columns(columns =>
				{
					columns.Bound(p => p.ModelId).Filterable(false);
					columns.Bound(p => p.Title);
					columns.Bound(p => p.SomeDate).Format("{0:MM/dd/yyyy}");
					columns.Bound(p => p.Name);
					columns.Bound(p => p.Description);
				})
				.Pageable()
				.Sortable()
				.Scrollable()
				.Filterable()
				.HtmlAttributes(new { style = "height:550px;" })
				.DataSource(dataSource => dataSource
					.Ajax()
					.PageSize(20)
                    .ServerOperation(true)
					.Read(read => read.Action("Example_Read", "Grid").Type(HttpVerbs.Get))
				)
		)
	</div>
</div>
